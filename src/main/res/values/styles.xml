<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="cierne_pole">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:background">@color/black_square</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="biele_pole">
        <item name="android:layout_width">41dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:background">@color/white_square</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>
